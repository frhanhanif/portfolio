---
import { menuItems } from "src/data/menu";
---

<div
  class="sticky top-0 z-30 flex h-20 items-center bg-opacity-70 backdrop-blur transition-all duration-100 bg-base-100 text-base-content shadow-sm"
>
  <div class="navbar w-full lg:max-w-[1400px] mx-auto justify-between">
    <div class="navbar-start">
      <a class="btn btn-ghost normal-case text-2xl lg:text-3xl" href="/">Farhan Hanifputra</a>
    </div>
    <div class="navbar-center">
      <div class="hidden lg:flex lg:ml-12 xl:gap-4 items-center">
        {menuItems.map(item => (
          <a class="btn btn-ghost normal-case text-xl" id={item.id} href={item.href}>{item.label}</a>
        ))}
      </div>
    </div>
    <div class="navbar-end">
      <!-- Hamburger icon -->
      <label for="my-drawer" class="btn btn-square btn-ghost lg:hidden mr-4">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-10 h-10 stroke-current"
          ><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </label>
    </div>
  </div>
</div>
