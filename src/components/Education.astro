---
import { getCollection } from "astro:content";
import { formatPeriod } from "../utils/date";

const entries = await getCollection("education");
---

<section class="space-y-8">
  {
    entries.map(({ data }) => (
      <div class="space-y-4 px-4">
        <div>
          <h2 class="text-lg md:text-xl font-bold mb-1">{data.institution}</h2>
          <h3 class="text-base md:text-xl font-semibold mb-1">
            {data.degree}
          </h3>
          <p class="text-base lg:text-lg font-light">
            {formatPeriod(data.start, data.end)}
          </p>
        </div>

        {data.publication && (
          <div>
            <h4 class="font-medium text-lg lg:text-xl mb-2">Publication</h4>
            <p class="text-sm md:text-lg space-y-1 text-justify">
              {data.publication}
            </p>
          </div>
        )}

        {data.awards && data.awards.length > 0 && (
          <div>
            <h4 class="font-medium text-lg lg:text-xl mb-2">Awards & Activities</h4>
            <ul class="list-disc list-outside ml-6 mb-6 text-sm md:text-lg space-y-1">
              {data.awards.map((award) => (
                <li>{award}</li>
              ))}
            </ul>
          </div>
        )}
      </div>
    ))
  }
</section>
