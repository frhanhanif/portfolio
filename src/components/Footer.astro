---
const today = new Date();
import { skills } from "../data/skills";
const astro = skills.find(skill => skill.name === "Astro");
---

<footer class="footer footer-center text-center block mb-5 pt-10">
  <div class="text-xs sm:text-sm opacity-75 flex flex-row items-center gap-1">
    &copy; {today.getFullYear()} <strong>Farhan Hanifputra.</strong> Crafted with           
    <img
            src={astro?.icon}
            alt={astro?.name}
            class="w-5 h-5 object-contain flex-shrink-0 hover:animate-steam"
    />
    and <span class="coffee hover:animate-steam text-base">â˜•</span>
  </div>

</footer>
<style>
@keyframes steam {
  0% { transform: translateY(0) scale(1); opacity: 1; }
  100% { transform: translateY(-4px) scale(1.1); opacity: 0.7; }
}

.hover\:animate-steam:hover {
  animation: steam 0.8s ease-in-out infinite alternate;
}
</style>
