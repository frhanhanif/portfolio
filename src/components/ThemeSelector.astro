---
// Cycling Theme Selector with Sun/Moon Icons
---

<button
  id="theme-selector"
  class="btn btn-ghost btn-circle"
  aria-label="Cycle theme"
  title="Change theme"
>
  <!-- Sun Icon (for light themes: corporate, autumn) -->
  <svg id="theme-icon-sun" class="w-6 h-6 hidden transition-colors duration-300" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
    <path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" fill-rule="evenodd" clip-rule="evenodd"></path>
  </svg>

  <!-- Moon Icon (for dark themes: dracula, business) -->
  <svg id="theme-icon-moon" class="w-6 h-6 hidden transition-colors duration-300" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
    <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
  </svg>
</button>

<script>
  const themes = ['corporate', 'dracula', 'autumn', 'business'] as const;

  const themeSelector = document.getElementById('theme-selector');
  const htmlElement = document.documentElement;
  const sunIcon = document.getElementById('theme-icon-sun');
  const moonIcon = document.getElementById('theme-icon-moon');

  // Define theme colors
  const themeColors: Record<string, string> = {
    'corporate': '#080708', // black for corporate
    'dracula': '#bd93f9', // purple for dracula
    'autumn': '#8b2332', // dark maroon for autumn
    'business': '#1f51e0'  // dark blue for business
  };

  // Function to update icon visibility and color based on current theme
  function updateIcon() {
    const currentTheme = htmlElement.getAttribute('data-theme') || themes[0];
    const color = themeColors[currentTheme];

    // Hide all icons first
    sunIcon?.classList.add('hidden');
    moonIcon?.classList.add('hidden');

    // Show sun for light themes (corporate, autumn)
    if (currentTheme === 'corporate' || currentTheme === 'autumn') {
      sunIcon?.classList.remove('hidden');
      if (sunIcon) {
        sunIcon.style.color = color;
      }
    }
    // Show moon for dark themes (dracula, business)
    else {
      moonIcon?.classList.remove('hidden');
      if (moonIcon) {
        moonIcon.style.color = color;
      }
    }
  }

  // Function to cycle to next theme
  function cycleTheme() {
    const currentTheme = htmlElement.getAttribute('data-theme') || themes[0];
    const currentIndex = themes.indexOf(currentTheme as any);
    const nextIndex = (currentIndex + 1) % themes.length;
    const newTheme = themes[nextIndex];

    htmlElement.setAttribute('data-theme', newTheme);
    localStorage.setItem('theme', newTheme);
    updateIcon();
  }

  // Initialize icon on page load
  updateIcon();

  // Add click event listener
  themeSelector?.addEventListener('click', cycleTheme);
</script>

<style>
  #theme-selector {
    transition: transform 0.3s ease;
  }

  #theme-selector:hover {
    transform: rotate(180deg);
  }

  #theme-selector svg {
    transition: opacity 0.2s ease, color 0.3s ease;
  }
</style>
